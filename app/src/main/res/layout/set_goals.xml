<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_goalset_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setgoals"
        android:textAppearance="@style/normal_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.192" />

    <Button
        android:id="@+id/bt_goalset_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:text="@string/continue_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bt_goalset_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/generic_button"
        app:layout_constraintBottom_toTopOf="@+id/bt_goalset_continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toEndOf="@+id/et_goalset_goals"
        app:layout_constraintTop_toBottomOf="@+id/tv_goalset_instruction"
        app:layout_constraintVertical_bias="0.357" />

    <EditText
        android:id="@+id/et_goalset_goals"
        style="@style/input_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/goal_header"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/bt_goalset_continue"
        app:layout_constraintEnd_toStartOf="@+id/bt_goalset_enter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_goalset_instruction"
        app:layout_constraintVertical_bias="0.361" />

</androidx.constraintlayout.widget.ConstraintLayout>